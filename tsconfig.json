{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "out": "build/app.js",
        "target": "es5",
        "module": "amd",
        "noEmitOnError": true
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "files": [
        "./src/app.ts",
        "./src/clock.ts",
        "./src/config.ts",
        "./src/main.ts",
        "./src/particles/emitter.ts",
        "./src/particles/emitterOptions.ts",
        "./src/particles/gpuParticles.ts",
        "./src/particles/valueFactory.ts",
        "./src/particles/valueTypes.ts",
        "./src/ui.ts",
        "./src/utils/http.ts",
        "./src/utils/shaderLoader.ts",
        "./src/utils/utils.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
